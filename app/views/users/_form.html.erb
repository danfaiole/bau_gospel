<%= bootstrap_form_for(@user) do |f| %>
  <%= f.text_field :email, label: t('user.view.new.email') %>
  <%= f.text_field :login, label: t('user.view.new.login') %>
  <%= f.text_field :name, label: t('user.view.new.name') %>
  <%= f.text_field :last_name, label: t('user.view.new.last_name') %>
  <%= f.password_field :password, label: t('user.view.new.password') %>
  <%= f.password_field :password_confirmation, label: t('user.view.new.password_confirmation') %>
  <%= f.submit %>
<% end %>
