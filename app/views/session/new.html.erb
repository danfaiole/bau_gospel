<div class="container">
    <div class="row vertical-offset-100">
      <div class="col-md-4 col-md-offset-4">
        <div class="panel panel-default">
          <div class="panel-heading">
            <h3 class="panel-title"><%= t('actioncontroller.session.title') %></h3>
        </div>
          <div class="panel-body">
            <%= bootstrap_form_tag url: session_index_path do |f| %>
              <%= f.text_field :email, label: t('activerecord.attributes.user.email') %>
              <%= f.password_field :password, label: t('activerecord.attributes.user.password') %>

              <%= f.form_group :remember_me do %>
                <%= f.check_box :remember_me, label: t('actioncontroller.session.remember_me') %>
              <% end %>

              <%= f.submit t('actioncontroller.session.submit'), class: 'btn btn-success' %>
              <%= link_to t('actioncontroller.session.signup'), signup_path, class: 'btn btn-default' %>
            <% end %>
          </div>
      </div>
    </div>
  </div>
</div>